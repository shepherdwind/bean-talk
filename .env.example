# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key

# Beancount File Path
BEANCOUNT_FILE_PATH=./data/

# Gmail API Credentials
GMAIL_CREDENTIALS_PATH=./credentials.json
GMAIL_TOKENS_PATH=./token.json

# Optional: Log Level
LOG_LEVEL=info

# Application Settings
NODE_ENV=development

# Merchant Category Mapping Configuration
# Path to the merchant category mapping JSON file
MERCHANT_CATEGORY_CONFIG_PATH=./config/merchant-category-mapping.json

# Cron Schedule Configuration
# Default: Run every hour at minute 0 (0 * * * *)
# Examples:
# - Every 30 minutes: */30 * * * *
# - Every day at 2 AM: 0 2 * * *
# - Every Monday at 9 AM: 0 9 * * 1
CRON_SCHEDULE=0 * * * * 

# Optional
BEAN_QUERY_COMMAND=bean-query